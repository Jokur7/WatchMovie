@model WatchMovie.Models.MovieModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="display-4">Szczegóły filmu</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edycja", "Edit", new { id = Model.MovieId }, new { @class = "btn btn-warning" })
    <a class="btn btn-dark" asp-action="Index">Powrót do listy filmów</a>
</div>
